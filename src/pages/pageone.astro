---
import "../styles/global.css";

const WHATSAPP_NUMBER = "918144991041";
---

<section class="max-w-7xl mx-auto px-4 sm:px-6 py-16 sm:py-24">

  <!-- SERVICE IMAGE -->
  <div class="mb-12">
    <img
      src="/service/img1.webp"
      alt="Magazine & Booklet Design"
      class="w-full max-h-[260px] md:max-h-[420px] object-cover rounded-3xl"
      loading="lazy"
    />
  </div>

  <!-- TITLE -->
  <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">
    Magazine / Booklet Design
  </h1>

  <!-- ABOUT -->
  <div class="max-w-3xl text-gray-600 mb-16 space-y-4">
    <p>
      I design clean, print-ready magazines and booklets with strong layout,
      readable typography, and professional finishing.
    </p>
    <p>
      Every file is prepared with correct margins, bleed, color profiles,
      and printer-friendly output — no shortcuts.
    </p>
  </div>

  <!-- PRICING -->
  <div class="flex flex-col gap-6 md:grid md:grid-cols-3 md:gap-8">

    <!-- BASIC -->
    <div class="pricing-card border rounded-2xl p-6 md:p-8 flex flex-col">
      <h3 class="text-xl font-semibold mb-1">Basic</h3>
      <p class="text-sm text-gray-500 mb-4">Starting from</p>

      <p class="price text-3xl font-bold mb-6"
         data-inr="₹800 / page"
         data-usd="$10 / page"></p>

      <ul class="space-y-3 text-gray-600 flex-1">
        <li>✔ Layout cleanup</li>
        <li>✔ Text & image fixes</li>
        <li>✔ Print-ready PDF</li>
        <li>✖ Redesign</li>
        <li>✖ Custom graphics</li>
      </ul>

      <a href="#"
         data-plan="Basic"
         data-code="MAG-BSC-34"
         class="wa-btn mt-8 text-center py-3 rounded-full font-medium">
        WhatsApp Me
      </a>
    </div>

    <!-- STANDARD -->
    <div class="pricing-card featured border-2 border-black rounded-2xl p-6 md:p-8 flex flex-col relative">
      <span class="badge">Most Popular</span>
      <span class="discount">10% OFF</span>

      <h3 class="text-xl font-semibold mb-1">Standard</h3>
      <p class="text-sm text-gray-500 mb-4">Starting from</p>

      <p class="price text-3xl font-bold mb-6"
         data-inr="₹1,500 / page"
         data-usd="$18 / page"></p>

      <ul class="space-y-3 text-gray-600 flex-1">
        <li>✔ Full redesign</li>
        <li>✔ Typography improvement</li>
        <li>✔ Image alignment</li>
        <li>✔ 2 revision rounds</li>
        <li>✖ Custom illustrations</li>
      </ul>

      <a href="#"
         data-plan="Standard"
         data-code="MAG-STD-82"
         class="wa-btn mt-8 text-center py-3 rounded-full font-medium">
        WhatsApp Me
      </a>
    </div>

    <!-- PREMIUM -->
    <div class="pricing-card border rounded-2xl p-6 md:p-8 flex flex-col">
      <h3 class="text-xl font-semibold mb-1">Premium</h3>
      <p class="text-sm text-gray-500 mb-4">Starting from</p>

      <p class="price text-3xl font-bold mb-6"
         data-inr="₹2,500 / page"
         data-usd="$30 / page"></p>

      <ul class="space-y-3 text-gray-600 flex-1">
        <li>✔ Creative redesign</li>
        <li>✔ Custom graphics</li>
        <li>✔ Color correction</li>
        <li>✔ Pre-press support</li>
        <li>✔ Priority handling</li>
      </ul>

      <a href="#"
         data-plan="Premium"
         data-code="MAG-PRM-99"
         class="wa-btn mt-8 text-center py-3 rounded-full font-medium">
        WhatsApp Me
      </a>
    </div>

  </div>
</section>

<style>
  .pricing-card {
    background: #fff;
    transition: transform .35s ease, box-shadow .35s ease;
  }

  /* Hover ONLY on desktop */
  @media (hover: hover) and (pointer: fine) {
    .pricing-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 28px 60px rgba(0,0,0,.12);
    }
  }

  .featured {
    box-shadow: 0 20px 45px rgba(0,0,0,.1);
  }

  .wa-btn {
    background: var(--accent-color, #2563eb);
    color: #fff;
    box-shadow: 0 12px 28px rgba(0,0,0,.18);
    transition: filter .2s ease, transform .15s ease;
  }

  .wa-btn:active {
    transform: scale(0.97);
  }

  .wa-btn:hover {
    filter: brightness(0.92);
  }

  @media (max-width: 768px) {
    .wa-btn { width: 100%; }
  }

  .badge {
    position: absolute;
    top: -14px;
    left: 16px;
    background: #000;
    color: #fff;
    font-size: 12px;
    padding: 4px 12px;
    border-radius: 999px;
  }

  .discount {
    position: absolute;
    top: 12px;
    right: 16px;
    background: #16a34a;
    color: #fff;
    font-size: 11px;
    padding: 4px 10px;
    border-radius: 999px;
  }
</style>

<script>
  // Static currency (no API)
  const prices = document.querySelectorAll(".price");
  const isIndia = navigator.language?.includes("en-IN");

  prices.forEach(p => {
    p.textContent = isIndia ? p.dataset.inr : p.dataset.usd;
  });

  // WhatsApp lead tracking (mobile-safe)
  document.querySelectorAll(".wa-btn").forEach(btn => {
    btn.addEventListener("click", e => {
      e.preventDefault();

      const plan = btn.dataset.plan;
      const code = btn.dataset.code;

      const message = encodeURIComponent(
        `I want ${plan} plan for Magazine / Booklet Design.\nCode: ${code}`
      );

      window.location.href =
        `https://wa.me/${WHATSAPP_NUMBER}?text=${message}`;
    });
  });
</script>
