---
import "../styles/global.css";
const WHATSAPP_NUMBER = "918144991049";
---

<section class="pricing-wrap">
  <!-- IMAGE -->
  <img
    src="/service/img1.webp"
    alt="Magazine / Booklet Design"
    class="service-img"
  />

  <!-- TITLE -->
  <h1 class="title">Magazine / Booklet Design</h1>
  <p class="desc">
    Clean, print-ready magazine & booklet design with correct margins, bleed,
    color profiles, and professional finishing.
  </p>

  <!-- PRICING -->
  <div class="pricing-grid">

    <!-- BASIC -->
    <div class="plan">
      <div class="plan-head">
        <h3>Basic</h3>
        <span class="price" data-inr="₹800 / page" data-usd="$10 / page"></span>
      </div>

      <ul>
        <li>Layout cleanup</li>
        <li>Text & image fixes</li>
        <li>Print-ready PDF</li>
        <li class="off">Redesign</li>
        <li class="off">Custom graphics</li>
      </ul>

      <button class="wa-btn" data-plan="Basic" data-code="MAG-BSC-34">
        WhatsApp Me
      </button>
    </div>

    <!-- STANDARD -->
    <div class="plan popular">
      <span class="tag">Most Popular</span>

      <div class="plan-head">
        <h3>Standard</h3>
        <span class="price" data-inr="₹1,500 / page" data-usd="$18 / page"></span>
      </div>

      <ul>
        <li>Full redesign</li>
        <li>Typography improvement</li>
        <li>Image alignment</li>
        <li>2 revisions</li>
        <li class="off">Custom illustrations</li>
      </ul>

      <button class="wa-btn solid" data-plan="Standard" data-code="MAG-STD-82">
        WhatsApp Me
      </button>
    </div>

    <!-- PREMIUM -->
    <div class="plan">
      <div class="plan-head">
        <h3>Premium</h3>
        <span class="price" data-inr="₹2,500 / page" data-usd="$30 / page"></span>
      </div>

      <ul>
        <li>Creative redesign</li>
        <li>Custom graphics</li>
        <li>Color correction</li>
        <li>Pre-press support</li>
        <li>Priority handling</li>
      </ul>

      <button class="wa-btn" data-plan="Premium" data-code="MAG-PRM-99">
        WhatsApp Me
      </button>
    </div>

  </div>
</section>

<style>
/* WRAPPER */
.pricing-wrap {
  max-width: 1100px;
  margin: auto;
  padding: 2rem 1rem;
}

/* IMAGE */
.service-img {
  width: 100%;
  max-height: 420px;
  object-fit: cover;
  border-radius: 1.5rem;
  margin-bottom: 2rem;
}

/* TEXT */
.title {
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: .5rem;
}
.desc {
  color: #555;
  max-width: 650px;
  margin-bottom: 3rem;
}

/* GRID */
.pricing-grid {
  display: grid;
  gap: 1.5rem;
}

/* DESKTOP */
@media (min-width: 768px) {
  .pricing-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

/* PLAN CARD */
.plan {
  border: 1px solid #e5e7eb;
  border-radius: 1.25rem;
  padding: 1.5rem;
  background: #fff;
  display: flex;
  flex-direction: column;
}

.plan-head {
  margin-bottom: 1rem;
}

.plan h3 {
  font-size: 1.25rem;
  font-weight: 600;
}

.price {
  display: block;
  font-size: 1.5rem;
  font-weight: 700;
  margin-top: .25rem;
}

/* FEATURES */
.plan ul {
  list-style: none;
  padding: 0;
  margin: 1rem 0 1.5rem;
  flex: 1;
}
.plan li {
  padding: .35rem 0;
  color: #333;
}
.plan li.off {
  color: #aaa;
  text-decoration: line-through;
}

/* POPULAR */
.popular {
  border: 2px solid black;
}
.tag {
  background: black;
  color: white;
  font-size: .7rem;
  padding: .3rem .6rem;
  border-radius: 999px;
  width: fit-content;
  margin-bottom: .75rem;
}

/* BUTTON */
.wa-btn {
  width: 100%;
  padding: .75rem;
  border-radius: 999px;
  border: 1px solid #ddd;
  background: #fff;
  font-weight: 500;
  cursor: pointer;
}
.wa-btn.solid {
  background: var(--accent-color, #25D366);
  color: white;
  border: none;
}
.wa-btn:hover {
  filter: brightness(.95);
}
</style>

<script>
  // Currency (static)
  document.querySelectorAll(".price").forEach(p => {
    p.textContent =
      navigator.language.includes("en-IN")
        ? p.dataset.inr
        : p.dataset.usd;
  });

  // WhatsApp
  document.querySelectorAll(".wa-btn").forEach(btn => {
    btn.onclick = () => {
      const msg = encodeURIComponent(
        `I want ${btn.dataset.plan} plan for Magazine / Booklet Design.\nCode: ${btn.dataset.code}`
      );
      location.href = `https://wa.me/${WHATSAPP_NUMBER}?text=${msg}`;
    };
  });
</script>
