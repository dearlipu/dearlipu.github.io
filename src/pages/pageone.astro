---
import "../styles/global.css";

const WHATSAPP_NUMBER = "918144991041"; // change this
---

<section class="max-w-7xl mx-auto px-4 sm:px-6 py-16 sm:py-24">

  <!-- SERVICE IMAGE -->
  <div class="mb-10">
    <img
      src="/service/img1.webp" 
      alt="Magazine & Booklet Design"
      class="w-full max-h-[420px] object-cover rounded-3xl"
      loading="lazy"
    />
  </div>

  <!-- TITLE -->
  <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-6">
    Magazine / Booklet Design
  </h1>

  <!-- ABOUT -->
  <div class="max-w-3xl text-gray-600 mb-16 space-y-4">
    <p>
      I design clean, print-ready magazines and booklets with strong layout,
      readable typography, and professional finishing.
    </p>
    <p>
      You’ll get industry-standard files, proper margins, color accuracy,
      and designs that actually work in print — not just on screen.
    </p>
  </div>

  <!-- PRICING -->
  <div class="grid md:grid-cols-3 gap-8">

    <!-- BASIC -->
    <div class="border rounded-2xl p-8 flex flex-col">
      <h3 class="text-xl font-semibold mb-2">Basic</h3>

      <p
        class="price text-3xl font-bold mb-6"
        data-inr="₹800–1,200 / page"
        data-usd="$10–15 / page">
      </p>

      <ul class="space-y-3 text-gray-600 flex-1">
        <li>✔ Layout cleanup</li>
        <li>✔ Text & image fixes</li>
        <li>✔ Print-ready PDF</li>
        <li>✖ Redesign</li>
        <li>✖ Custom graphics</li>
      </ul>

      <a
        href="#"
        data-plan="Basic"
        data-code="#MKG34"
        class="wa-btn mt-8 text-center py-3 rounded-full border font-medium hover:bg-gray-50">
        WhatsApp Me
      </a>
    </div>

    <!-- STANDARD -->
    <div class="border-2 border-black rounded-2xl p-8 flex flex-col relative">
      <span class="absolute -top-3 left-4 bg-black text-white text-xs px-4 py-1 rounded-full">
        Most Popular
      </span>

      <h3 class="text-xl font-semibold mb-2">Standard</h3>

      <p
        class="price text-3xl font-bold mb-6"
        data-inr="₹1,500–2,000 / page"
        data-usd="$18–25 / page">
      </p>

      <ul class="space-y-3 text-gray-600 flex-1">
        <li>✔ Full redesign</li>
        <li>✔ Typography improvement</li>
        <li>✔ Image alignment</li>
        <li>✔ 2 revision rounds</li>
        <li>✖ Custom illustrations</li>
      </ul>

      <a
        href="#"
        data-plan="Standard"
        data-code="#STD82"
        class="wa-btn mt-8 text-center py-3 rounded-full bg-black text-white font-medium hover:opacity-90">
        WhatsApp Me
      </a>
    </div>

    <!-- PREMIUM -->
    <div class="border rounded-2xl p-8 flex flex-col">
      <h3 class="text-xl font-semibold mb-2">Premium</h3>

      <p
        class="price text-3xl font-bold mb-6"
        data-inr="₹2,500–3,500 / page"
        data-usd="$30–45 / page">
      </p>

      <ul class="space-y-3 text-gray-600 flex-1">
        <li>✔ Creative redesign</li>
        <li>✔ Custom graphics</li>
        <li>✔ Color correction</li>
        <li>✔ Pre-press support</li>
        <li>✔ Priority handling</li>
      </ul>

      <a
        href="#"
        data-plan="Premium"
        data-code="#PRM99"
        class="wa-btn mt-8 text-center py-3 rounded-full border font-medium hover:bg-gray-50">
        WhatsApp Me
      </a>
    </div>

  </div>
</section>

<!-- SCRIPT -->
<script>
  // Auto currency by location
  const prices = document.querySelectorAll(".price");

  fetch("https://ipapi.co/json/")
    .then(res => res.json())
    .then(data => {
      const isIndia = data.country === "IN";
      prices.forEach(p => {
        p.textContent = isIndia ? p.dataset.inr : p.dataset.usd;
      });
    })
    .catch(() => {
      prices.forEach(p => p.textContent = p.dataset.inr);
    });

  // WhatsApp message with plan + code
  document.querySelectorAll(".wa-btn").forEach(btn => {
    btn.addEventListener("click", e => {
      e.preventDefault();

      const plan = btn.dataset.plan;
      const code = btn.dataset.code;

      const message = encodeURIComponent(
        `I want ${plan} plan, Code:${code}`
      );

      window.open(
        `https://wa.me/${WHATSAPP_NUMBER}?text=${message}`,
        "_blank"
      );
    });
  });
</script>
