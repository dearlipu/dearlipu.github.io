<script>
  const buttons = document.querySelectorAll(".currency-btn");
  const prices = document.querySelectorAll(".price");

  function setCurrency(type) {
    prices.forEach(p => p.textContent = p.dataset[type]);
    buttons.forEach(b => {
      b.classList.toggle("bg-black", b.dataset.currency === type);
      b.classList.toggle("text-white", b.dataset.currency === type);
    });
  }

  buttons.forEach(b => b.onclick = () => setCurrency(b.dataset.currency));
  setCurrency("inr");
</script>
