---
import "../styles/global.css";
const WHATSAPP_NUMBER = "918144991049";
---

<section class="max-w-7xl mx-auto px-4 sm:px-6 py-16 sm:py-24">
  <!-- SERVICE IMAGE -->
  <div class="mb-12">
    <img
      src="/service/img1.webp"
      alt="Magazine & Booklet Design"
      class="w-full max-h-[260px] md:max-h-[420px] object-cover rounded-3xl"
      loading="lazy"
    />
  </div>

  <!-- TITLE -->
  <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">
    Magazine / Booklet Design
  </h1>

  <!-- ABOUT -->
  <div class="max-w-3xl text-gray-600 mb-16 space-y-4">
    <p>
      I design clean, print-ready magazines and booklets with strong layout,
      readable typography, and professional finishing.
    </p>
    <p>
      Every file is prepared with correct margins, bleed, color profiles,
      and printer-friendly output — no shortcuts.
    </p>
  </div>

  <!-- PRICING (FLEXBOX FOR BETTER MOBILE VERTICAL STACKING) -->
  <div class="flex flex-col md:flex-row md:flex-wrap gap-6 md:gap-8">
    <!-- BASIC -->
    <div class="pricing-card">
      <h3>Basic</h3>
      <p class="sub">Starting from</p>
      <p class="price" data-inr="₹800 / page" data-usd="$10 / page"></p>

      <ul>
        <li>✔ Layout cleanup</li>
        <li>✔ Text & image fixes</li>
        <li>✔ Print-ready PDF</li>
        <li>✖ Redesign</li>
        <li>✖ Custom graphics</li>
      </ul>

      <button class="wa-btn" data-plan="Basic" data-code="MAG-BSC-34">
        WhatsApp Me
      </button>
    </div>

    <!-- STANDARD -->
    <div class="pricing-card featured">
      <span class="badge">Most Popular</span>
      <span class="discount">10% OFF</span>

      <h3>Standard</h3>
      <p class="sub">Starting from</p>
      <p class="price" data-inr="₹1,500 / page" data-usd="$18 / page"></p>

      <ul>
        <li>✔ Full redesign</li>
        <li>✔ Typography improvement</li>
        <li>✔ Image alignment</li>
        <li>✔ 2 revisions</li>
        <li>✖ Custom illustrations</li>
      </ul>

      <button class="wa-btn" data-plan="Standard" data-code="MAG-STD-82">
        WhatsApp Me
      </button>
    </div>

    <!-- PREMIUM -->
    <div class="pricing-card">
      <h3>Premium</h3>
      <p class="sub">Starting from</p>
      <p class="price" data-inr="₹2,500 / page" data-usd="$30 / page"></p>

      <ul>
        <li>✔ Creative redesign</li>
        <li>✔ Custom graphics</li>
        <li>✔ Color correction</li>
        <li>✔ Pre-press support</li>
        <li>✔ Priority handling</li>
      </ul>

      <button class="wa-btn" data-plan="Premium" data-code="MAG-PRM-99">
        WhatsApp Me
      </button>
    </div>
  </div>
</section>

<style>
  .pricing-card {
    background: #fff;
    border: 1px solid #e5e7eb;
    border-radius: 1.25rem;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex: 1; /* Ensures equal width on larger screens when in flex-row */
  }
  
  .pricing-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
  }
  
  .sub {
    font-size: 0.875rem;
    color: #6b7280;
    margin-bottom: 0.75rem;
  }
  
  .price {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 1.25rem;
  }
  
  .pricing-card ul {
    flex: 1;
    color: #4b5563;
    display: grid;
    gap: 0.5rem;
  }
  
  .wa-btn {
    margin-top: 1.5rem;
    padding: 0.75rem;
    border-radius: 999px;
    background: var(--accent-color, #22c55e);
    color: #fff;
    font-weight: 500;
    width: 100%;
  }
  
  @media (hover:hover) {
    .pricing-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 20px 45px rgba(0,0,0,.12);
    }
  }
</style>

<script>
  // currency (no API)
  document.querySelectorAll(".price").forEach(p => {
    p.textContent =
      navigator.language.includes("en-IN")
        ? p.dataset.inr
        : p.dataset.usd;
  });

  // WhatsApp
  document.querySelectorAll(".wa-btn").forEach(btn => {
    btn.onclick = () => {
      const msg = encodeURIComponent(
        `I want ${btn.dataset.plan} plan for Magazine / Booklet Design.\nCode: ${btn.dataset.code}`
      );
      location.href = `https://wa.me/918144991041?text=${msg}`;
    };
  });
</script>
