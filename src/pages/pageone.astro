<style>
/* ===== HARD RESET ===== */
* {
  box-sizing: border-box;
}

.service-section {
  max-width: 1100px;
  margin: auto;
  padding: 3rem 1rem;
  overflow-x: hidden; /* ðŸ”‘ CRITICAL */
}

/* ===== IMAGE ===== */
.service-image {
  width: 100%;
  max-height: 360px;
  object-fit: cover;
  border-radius: 1.5rem;
  margin-bottom: 2rem;
}

/* ===== TEXT ===== */
.service-title {
  font-size: clamp(2rem, 4vw, 3rem);
  font-weight: 700;
}

.service-about {
  max-width: 720px;
  color: #555;
  margin-bottom: 2.5rem;
}

/* ===== GRID (MOBILE FIRST) ===== */
.pricing-grid {
  display: grid;
  grid-template-columns: 1fr; /* MOBILE: 1 COLUMN */
  gap: 1.25rem;
}

/* DESKTOP ONLY */
@media (min-width: 768px) {
  .pricing-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }
}

/* ===== CARD ===== */
.pricing-card {
  background: #fff;
  border: 1px solid #e5e7eb;
  border-radius: 1.25rem;
  padding: 1.75rem;
  display: flex;
  flex-direction: column;
  min-width: 0;        /* ðŸ”‘ CRITICAL */
  max-width: 100%;    /* ðŸ”‘ CRITICAL */
}

.pricing-card h3 {
  font-size: 1.25rem;
}

.starting {
  font-size: .85rem;
  color: #777;
}

.price {
  font-size: 1.75rem;
  font-weight: 700;
  margin: 1rem 0;
}

.pricing-card ul {
  flex: 1;
  padding-left: 0;
  list-style: none;
}

.pricing-card li {
  margin-bottom: .5rem;
}

/* ===== BUTTON ===== */
.wa-btn {
  width: 100%;
  margin-top: 1.5rem;
  padding: .75rem;
  border-radius: 999px;
  border: none;
  background: #25D366; /* WhatsApp Green */
  color: #fff;
  font-weight: 600;
  cursor: pointer;
  z-index: 2;
}

/* ===== FEATURED ===== */
.featured {
  border: 2px solid #000;
  position: relative;
}

.badge {
  position: absolute;
  top: -12px;
  left: 16px;
  background: #000;
  color: #fff;
  font-size: 12px;
  padding: 4px 12px;
  border-radius: 999px;
}

/* HOVER ONLY DESKTOP */
@media (hover: hover) and (pointer: fine) {
  .pricing-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 25px 50px rgba(0,0,0,.12);
  }
}
</style>

<script>
/* ===== CURRENCY ===== */
const prices = document.querySelectorAll(".price");
const isIndia = navigator.language?.includes("en-IN");

prices.forEach(p => {
  p.textContent = isIndia ? p.dataset.inr : p.dataset.usd;
});

/* ===== WHATSAPP ===== */
document.querySelectorAll(".wa-btn").forEach(btn => {
  btn.addEventListener("click", () => {
    const plan = btn.dataset.plan;
    const code = btn.dataset.code;

    const msg = encodeURIComponent(
      `I want ${plan} plan for Magazine / Booklet Design.\nCode: ${code}`
    );

    location.href = `https://wa.me/${WHATSAPP_NUMBER}?text=${msg}`;
  });
});
</script>
