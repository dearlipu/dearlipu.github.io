---
import "../styles/global.css";
const WHATSAPP_NUMBER = "918144991049";
---

<section class="pricing-wrap">

  <!-- IMAGE -->
  <img
    src="/service/img1.webp"
    alt="Magazine / Booklet Design"
    class="service-img"
  />

  <h1 class="title">Magazine / Booklet Design</h1>
  <p class="desc">
    Professional magazine & booklet design with print-ready output.
  </p>

  <!-- ================= MOBILE (TABS) ================= -->
  <div class="mobile-only">

    <!-- TABS -->
    <div class="tabs">
      <button class="tab active" data-tab="basic">Basic</button>
      <button class="tab" data-tab="standard">Standard</button>
      <button class="tab" data-tab="premium">Premium</button>
    </div>

    <!-- BASIC -->
    <div class="tab-panel active" id="basic">
      <h3>₹800 / page</h3>
      <p class="meta">2-day delivery • 2 revisions</p>

      <ul>
        <li>✔ Layout cleanup</li>
        <li>✔ Text & image fixes</li>
        <li>✔ Print-ready PDF</li>
      </ul>

      <button class="wa-btn solid"
        data-plan="Basic"
        data-code="MAG-BSC-34">
        Continue
      </button>
    </div>

    <!-- STANDARD -->
    <div class="tab-panel" id="standard">
      <h3>₹1,500 / page</h3>
      <p class="meta">2-day delivery • 5 revisions</p>

      <ul>
        <li>✔ Full redesign</li>
        <li>✔ Typography improvement</li>
        <li>✔ Image alignment</li>
      </ul>

      <button class="wa-btn solid"
        data-plan="Standard"
        data-code="MAG-STD-82">
        Continue
      </button>
    </div>

    <!-- PREMIUM -->
    <div class="tab-panel" id="premium">
      <h3>₹2,500 / page</h3>
      <p class="meta">2-day delivery • Unlimited revisions</p>

      <ul>
        <li>✔ Creative redesign</li>
        <li>✔ Custom graphics</li>
        <li>✔ Pre-press support</li>
      </ul>

      <button class="wa-btn solid"
        data-plan="Premium"
        data-code="MAG-PRM-99">
        Continue
      </button>
    </div>
  </div>

  <!-- ================= DESKTOP (3 COLUMNS) ================= -->
  <div class="desktop-only pricing-grid">
    <!-- reuse earlier desktop cards if you want -->
    <p style="opacity:.6">Desktop layout stays 3-column (already working)</p>
  </div>

</section>

<style>
/* BASE */
.pricing-wrap {
  max-width: 1100px;
  margin: auto;
  padding: 1.5rem;
}
.service-img {
  width: 100%;
  max-height: 360px;
  object-fit: cover;
  border-radius: 1.5rem;
  margin-bottom: 1.5rem;
}
.title {
  font-size: 2rem;
  font-weight: 700;
}
.desc {
  color: #555;
  margin-bottom: 1.5rem;
}

/* VISIBILITY */
.mobile-only { display: block; }
.desktop-only { display: none; }

@media (min-width: 768px) {
  .mobile-only { display: none; }
  .desktop-only { display: block; }
}

/* TABS */
.tabs {
  display: flex;
  border-bottom: 1px solid #e5e7eb;
  margin-bottom: 1rem;
}
.tab {
  flex: 1;
  padding: .75rem;
  font-weight: 600;
  background: none;
  border: none;
  border-bottom: 2px solid transparent;
}
.tab.active {
  border-color: black;
}

/* PANELS */
.tab-panel {
  display: none;
}
.tab-panel.active {
  display: block;
}
.tab-panel h3 {
  font-size: 1.75rem;
  font-weight: 700;
}
.meta {
  font-size: .85rem;
  color: #666;
  margin-bottom: 1rem;
}
.tab-panel ul {
  list-style: none;
  padding: 0;
  margin-bottom: 1.5rem;
}
.tab-panel li {
  padding: .4rem 0;
}

/* BUTTON */
.wa-btn {
  width: 100%;
  padding: .75rem;
  border-radius: 999px;
  font-weight: 600;
}
.wa-btn.solid {
  background: var(--accent-color, #25D366);
  color: white;
  border: none;
}
</style>

<script>
  // Tabs
  const tabs = document.querySelectorAll(".tab");
  const panels = document.querySelectorAll(".tab-panel");

  tabs.forEach(tab => {
    tab.onclick = () => {
      tabs.forEach(t => t.classList.remove("active"));
      panels.forEach(p => p.classList.remove("active"));

      tab.classList.add("active");
      document.getElementById(tab.dataset.tab).classList.add("active");
    };
  });

  // WhatsApp
  document.querySelectorAll(".wa-btn").forEach(btn => {
    btn.onclick = () => {
      const msg = encodeURIComponent(
        `I want ${btn.dataset.plan} plan for Magazine / Booklet Design.\nCode: ${btn.dataset.code}`
      );
      location.href = `https://wa.me/${WHATSAPP_NUMBER}?text=${msg}`;
    };
  });
</script>
